apiVersion: batch/v1
kind: Job
metadata:
  name: mitmproxy-{{ rin_id }}
spec:
  template:
    metadata:
      labels:
        app: mitmproxy
    spec:
      selector:
        nodeSelector:
          kubernetes.io/hostname: {{ app_node }}
      restartPolicy: Never
      containers:
      - image: mitmproxy/mitmproxy:latest
        imagePullPolicy: Always
        name: mitmproxy
        ports:
          - containerPort: 8080
            protocol: TCP
        command: ["/usr/bin/mitmdump"]
{% if args is defined and args != '' %}
        args: ["-s", "/scripts/script.py {{ args }}"]
{% else %}
        args: ["-s", "/scripts/script.py"]
{% endif%}
        resources:
          requests:
            cpu: 10m
            memory: 5M
          limits:
            cpu: 100m
            memory: 20M
        volumeMounts:
          - name: script
            mountPath: /scripts
      volumes:
        - name: script
          configMap:
            name: mitmproxy-conf
            defaultMode: 0744   # makes script executable
